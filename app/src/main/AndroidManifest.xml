<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nasboard"
        tools:targetApi="31">

        <!-- 引导Activity作为启动Activity -->
        <activity
            android:name=".ui.setup.SetupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主Activity -->
        <activity
            android:name=".ime.activity.MainActivity"
            android:exported="false" />

        <!-- 键盘语言设置Activity -->
        <activity
            android:name=".ime.activity.KeyboardLanguageSettingsActivity"
            android:label="键盘语言设置"
            android:exported="false" />

        <!-- 主题设置Activity -->
        <activity
            android:name=".ime.activity.ThemeSettingsActivity"
            android:label="主题设置"
            android:exported="false" />

        <!-- 输入法服务 -->
        <service
            android:name=".NasInputMethodService"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true"
            android:enabled="true"
            android:label="Nasboard Keyboard">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

    </application>

</manifest>